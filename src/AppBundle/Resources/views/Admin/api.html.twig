{% extends '::base.html.twig' %}

{% block title %}Advanced Weather - API Manager{% endblock %}

{% block body %}
    <div class="hero" data-bg-image="images/background.jpg" style="background-image: url('/images/background.jpg');">
        <div class="container">

            {% block beadcrumbs %}
                {% include "::inc/breadcrumbs.html.twig" %}
            {% endblock %}
        </div>
    </div>
    <div class="weather-table-wrapper">
        <table class="table table-condensed" id="weather-table">
            <thead>
            <tr>
                <th>Username</th>
                <th>API key</th>
                <th>Delete API</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.api }}</td>
                    <td>{% if user.api is not null %}<a href='#' onclick="delete_api('{{ user.api }}','{{ user.id }}',this)">Delete</a>{% endif %}</td>
                </tr>
            {% else %}
                <tr>
                    <td>No users yet</td>
                    <td></td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}