{% extends '::base.html.twig' %}

{% block title %}Advanced Weather - Stats Viewer{% endblock %}

{% block body %}
    <div class="hero" data-bg-image="images/background.jpg" style="background-image: url('/images/background.jpg');">
        <div class="container">

            {% block beadcrumbs %}
                {% include "::inc/breadcrumbs.html.twig" %}
            {% endblock %}
        </div>
    </div>
    <div class="weather-table-wrapper">
        <table class="table table-condensed" id="weather-table">
            <thead>
            <tr>
                <th>Username</th>
                <th>Last access</th>
                <th>Register date</th>
                <th>Roles</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.lastLogin|date('Y-m-d H:i:s') }}</td>
                    <td>{{ user.registerDate|date('Y-m-d H:i:s') }}</td>
                    <td>
                        {% for status in user.roles %}
                            {{ status }}
                            {% if not loop.last %}|{% endif %}
                        {% endfor %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td>No users yet</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}