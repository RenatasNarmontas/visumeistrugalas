{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="forecast-container">
        <div class="today forecast">

            <div class="forecast-header">
                <label>Register</label>
            </div>

            <div class="forecast-content">
                {{ form_start(form, {'method': 'post', 'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}
                <div class="form-group required">
                    <label for="email" class="col-sm-3 col-lg-4 control-label">{{ 'form.email'|trans }}:</label>
                    <div class="col-sm-7 col-lg-5">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.email) is not empty %}
                            <div class="has-error">
                                <span class="help-block">{{ form_errors(form.email) }}</span>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="form-group required">
                    <label for="pass" class="col-sm-3 col-lg-4 control-label">{{ 'form.password'|trans }}:</label>
                    <div class="col-sm-7 col-lg-5">
                        {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control pwd','type':'password'}}) }}
                        {% if form_errors(form.plainPassword) is not empty %}
                            <div class="has-error">
                                <span class="help-block">{{ form_errors(form.plainPassword) }}</span>
                            </div>
                        {% endif %}
                    </div>

                        <span class="input-group-btn col-sm-1">
                            <button class="btn btn-default btn-color reveal" id="show" type="button">Show</button>
                        </span>
                </div>

                <div class="form-group">
                    <div class="col-sm-6 col-sm-offset-5">
                        <div class="checkbox col-sd-offset-4">
                            <label>
                                {{ form_widget(form.notifications) }}{{ 'form.notifications'|trans }}
                            </label>
                        </div>
                    </div>
                </div>

                <div class="col-sm-10 col-sm-offset-1">
                    <p class="terms">
                        We are committed to protecting your privacy. We use personal data that you provide to give you
                        personalized treatment on the
                        Services. Certain services offer you the ability to receive weather-related updates via e-mail,
                        text message, or push notification. To provide
                        these Services, we may need to collect your e-mail address.
                    </p>
                </div>

                <div class="form-group">
                    <div class="center-block col-md-12">
                        <input type="submit" id="submit" value="Register" class="btn btn-primary center-block">
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>