{% trans_default_domain 'FOSUserBundle' %}
<div class="panel panel-default">
    <div class="panel-heading"><h2 class="panel-title">Reset password</h2> </div>
<div class="form-wrapper">
    <div class="col-md-offset-3 heading-row-offset"><h4>Please enter Your email address and we will sent You password recovery instructions.</h4></div>
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-horizontal col-sm-offset-2">
        <div>
            <div class="form-group">
                <label class="col-sm-3 control-label"for="username">{{ 'form.email'|trans }}:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control" id="username" name="username" required="required"/>
                </div>
                {% if invalid_username is defined %}
                    <div class="has-error">
                        <span class="help-block">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</span>
                    </div>
                {% endif %}
            </div>

        </div>

        <div class="form-group">
            <div class="col-sm-12 col-md-10  col-md-offset-4">
                <input type="submit" class="btn btn-primary" value="{{ 'resetting.request.submit'|trans }}"/>
            </div>
        </div>
    </form>
</div>
</div>