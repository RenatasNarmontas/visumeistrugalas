{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="forecast-container">
        <div class="today forecast">

            <div class="forecast-header">
                <label>Reset password</label>
            </div>

            <div class="forecast-content">
                <div class="text-center">
                    <h4>Please enter Your email address and we will sent You
                        password recovery instructions.</h4>
                </div>
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST"
                      class="form-horizontal">

                    <div class="form-group">
                        <label class="col-sm-3 col-lg-4 control-label" for="username">{{ 'form.email'|trans }}:</label>
                        <div class="col-sm-7 col-lg-5">
                            <input type="text" class="form-control" id="username" name="username"
                                   required="required"/>
                        </div>
                        {% if invalid_username is defined %}
                            <div class="has-error">
                                <span class="col-sm-offset-3 col-sm-9 col-lg-2 help-block">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</span>
                            </div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        <div class="center-block">
                            <input type="submit" class="btn btn-primary center-block"
                                   value="{{ 'resetting.request.submit'|trans }}"/>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>