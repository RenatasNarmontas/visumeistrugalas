{% trans_default_domain 'FOSUserBundle' %}
<div class="panel panel-default">
    <div class="panel-heading"><h2 class="panel-title">Reset password</h2> </div>
<div class="form-wrapper">
{{ form_start(form, { 'attr': { 'class': 'fos_user_resetting_reset form-horizontal col-sm-offset-2' } }) }}

    <div class="form-group">
        <label for="{{ 'form.new_password'}}" class="col-sm-2 control-label">{{'form.new_password'|trans }}:</label>
        <div class="col-sm-4">
            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control pwd'}}) }}
        </div>
        <span class="input-group-btn col-sm-1">
            <button class="btn btn-default btn-color reveal" id="show" type="button">Show</button>
          </span>
        {% if form_errors(form.plainPassword) is not empty %}
            <div class="has-error col-md-6">
                <span class="help-block">{{ form_errors(form.plainPassword) }}</span>
            </div>
        {% endif %}
    </div>

    {{ form_widget(form._token) }}

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-primary" id="btn-change-pass" value="{{ 'resetting.reset.submit'|trans }}" />
        </div>
    </div>
{{ form_end(form) }}
</div>
    </div>