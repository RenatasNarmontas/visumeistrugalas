{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}

    <div class="container">
        <div class="forecast-container">
            <div class="today forecast">

                <div class="forecast-header">
                    <h2 class="panel-title">Login</h2>
                </div>

                <div class="forecast-content">
                    {% if error %}
                        <div class="has-error col-md-offset-4">
                            <span class="help-block">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                        </div>
                    {% endif %}
                    <div class="col-md-offset-1">
                        <form role="form" action="{{ path("fos_user_security_check") }}" method="POST">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                            <fieldset>
                                <div class="row">
                                    <div class="col-sm-12 col-md-10  col-md-offset-1 ">
                                        <div class="form-group">
                                            <div class="input-group col-md-8 col-md-offset-1">

												<span class="input-group-addon">
													<i class="glyphicon glyphicon-user"></i>
												</span>
                                                <input class="form-control" placeholder="Email" id="username"
                                                       name="_username" value="{{ last_username }}"
                                                       required="required">
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <div class="input-group col-md-8 col-md-offset-1">
												<span class="input-group-addon">
													<i class="glyphicon glyphicon-lock"></i>
												</span>
                                                <input type="password" class="form-control"
                                                       placeholder="Password" id="password" name="_password"
                                                       required="required">
                                            </div>
                                        </div>

                                        <div class="checkbox login-checkbox col-md-offset-1">
                                            <label>
                                                <input type="checkbox"> Remember me
                                            </label>
                                        </div>

                                        <div class="form-group">
                                            <div class="center-block col-md-11">
                                                <input type="submit" id="_submit"
                                                       class="btn btn-primary center-block"
                                                       name="_submit" value="{{ 'security.login.submit'|trans }}"/>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>

                <div class="panel-footer ">
                    <a href="{{ path('fos_user_resetting_request') }}"> Forgot your password? </a>
                </div>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}